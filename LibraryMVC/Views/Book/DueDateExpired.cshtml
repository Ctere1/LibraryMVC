@model IEnumerable<LibraryMVC.Models.book>

@{
    ViewBag.Title = "Due Date Expired";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DueDateExpired</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issuedFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issuedTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.borrowedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.issuedFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.issuedTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.borrowedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.id, controller = "Book", action = "Details" }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.id, controller = "Book", action = "Edit" }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id, controller = "Book", action = "Delete" }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
