@model LibraryMVC.Models.user

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h4 class="text-center">Signup  <span class="glyphicon glyphicon-user"></span></h4>
    <hr />
    <table align="center">
        <tr>
            <td>
                <divclass class="text-center">
                    <div class="container">
                        @ViewBag.Message
                        @using (Html.BeginForm("Signup", "Signup", FormMethod.Post))
                        {
                            @("User Name")
                            <div class="form-group">
                                <input name="name" type="text" placeholder="Name" class="form-group" />
                            </div>
                            @("User Email")
                            <div class="form-group">
                                <input name="email" type="text" placeholder="Email" class="form-group" />
                            </div>
                            @("Password")
                            <div class="form-group">
                                <input name="password" type="password" placeholder="Password" class="form-group" />
                            </div>
                            <input type="submit" class="btn btn-primary" value="Signup">
                        }
                    </div>
                    <br />
                    <div class="container" style="background-color:#f1f1f1">
                        <span class="psw">You have an <a href="#">@Html.ActionLink("account?", "Login", "Auth")</a></span>
                    </div>
            </td>
        </tr>
    </table>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Library</p>
        </footer>
    </div>
</body>
</html>
