@model LibraryMVC.Models.user
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="text-center">
        <div class="container">
            @ViewBag.Message
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="form-group">
                    <input name="name" type="text" placeholder="Username" class="form-group" />
                </div>
                <div class="form-group">
                    <input name="password" type="password" placeholder="Password" class="form-group" />
                </div>
                <input type="submit" class="btn btn-primary" value="Login">
            }
        </div>
        <div class="container" style="background-color:#f1f1f1">
            <span class="psw">Don't have an <a href="#">account?</a></span>
        </div>
    </div>
</body>
</html>
