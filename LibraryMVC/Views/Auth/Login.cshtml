@model LibraryMVC.Models.user
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <table border="1" align="center">
        <tr>
            <td>
                <div class="text-center">
                    <div class="container">
                        @ViewBag.Message
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                        {
                            @("User Email")
                            <div class="form-group">
                                <input name="email" type="text" placeholder="Email" class="form-group" />
                            </div>
                            @("Password")
                            <div class="form-group">
                                <input name="password" type="password" placeholder="Password" class="form-group" />
                            </div>
                            <input type="submit" class="btn btn-primary" value="Login">
                        }
                    </div>
                    <div class="container" style="background-color:#f1f1f1">
                        <span class="psw">Don't have an <a href="#">@Html.ActionLink("account?", "Signup", "Signup")</a></span>
                    </div>
                    <div class="container" style="background-color:#f1f1f1">
                        <span class="psw">Login as <a href="#">@Html.ActionLink("admin", "AdminLogin", "Auth")</a></span>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</body>
</html>
