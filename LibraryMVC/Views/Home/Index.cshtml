@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        @if ("admin" == User.Identity.Name)
        {


            <div class="col-md-6">
                <h2>Book information</h2>
                <p>
                    @Html.ActionLink("Due Date Expired Books", "DueDateExpired", "Book")
                </p>
                <p><img src="~/Home/MakeBookChart" /> </p>
            </div>
            <div class="col-md-4">
                <h2>User information</h2>
                <p>
                    @Html.ActionLink("Users", "Index", "User")
                </p>
                <p><img src="~/Home/MakeUserChart" /> </p>
            </div>
        }
        else
        {
            <div class="col-md-6">
                <h2> My due date expired books</h2>
                <p>
                    Please see the My Books tab
                </p>
                <p><img src="~/Home/MakeDueDateChart" /> </p>

            </div>
            <div class="col-md-4">
                <h2>My borrowed Books</h2>
                <p>
                    Please see the My Books tab
                </p>
                <p><img src="~/Home/MakeMyBooksCountChart" /> </p>
            </div>
        }

    </div>

</body>
</html>
